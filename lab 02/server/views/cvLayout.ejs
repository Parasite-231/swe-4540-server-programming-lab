<%- include('./partials/common/header.ejs'); %>

<body class="w3-light-grey">
    <!-- Page Container -->
    <div class="w3-content w3-margin-top" style="max-width: 1400px">
      <!-- The Grid -->
      <div class="w3-row-padding">
        <!-- Left Column -->
        <div class="w3-third">
          <div class="w3-white w3-text-grey w3-card-4">
            <div class="w3-display-container">
                <%- include('./partials/common/cvAvatar.ejs'); %>
              <div class="w3-display-bottomleft w3-container w3-text-black" >
                <h2><%= name %></h2>
              </div>
            </div>
            <div class="w3-container" style="margin-top: 5%">
            
              <p>
                <i class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal"></i><%=
                designation %>
              </p>
              <p>
                <i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i>
                <%= address %>
              </p>
              <p>
                <i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i><%=
                email %>
              </p>
              <p>
                <i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal"></i><%=
                mobile_number %>
              </p>
              <hr />

              <%- include('./partials/skill section/skillInformation.ejs');%>
              <br />

              <%- include('./partials/language section/languageInformation.ejs');%>
              <br />
            </div>
          </div>
          <br />

          <!-- End Left Column -->
        </div>

        <!-- Right Column -->
        <div class="w3-twothird">
          <%- include('./partials/experience section/experienceInformation.ejs'); %>
          <%-include('./partials/education section/educationInformation.ejs'); %>

          <!-- End Right Column -->
        </div>

        <!-- End Grid -->
      </div>

      <!-- End Page Container -->
    </div>

    <%- include('./partials/common/footer.ejs'); %>
  </body>
</html>